@model IEnumerable<Location.Models.DetailsAreaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AriaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AriaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.country.CountryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AriaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AriaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country.CountryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AriaId" class="btn btn-primary">Edit</a>|
                <a asp-action="Details" asp-route-id="@item.AriaId" class="btn btn-dark">Details</a>|
                <a asp-action="Delete" asp-route-id="@item.AriaId"class="btn btn-info" onclick="return confirm('Are you sure you want to delete this?') ">Delete</a>|
            </td>
        </tr>
}
    </tbody>
</table>
